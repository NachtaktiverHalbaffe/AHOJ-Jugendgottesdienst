<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/card_impulse">

    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/cardView"
        android:layout_marginTop="4sp"
        android:layout_marginBottom="4sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/card"
            android:layout_height="wrap_content"
            android:padding="4sp">

            <ImageView
                android:id="@+id/card_cover"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginRight="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/cover" />

            <TextView
                android:id="@+id/card_Titel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="8sp"
                android:layout_marginTop="4sp"
                android:layout_toRightOf="@id/card_cover"
                android:text="Titel"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/ic_clock"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignTop="@+id/card_laenge"
                android:layout_marginLeft="8sp"
                android:layout_marginRight="2sp"
                android:layout_toEndOf="@+id/card_cover"
                android:adjustViewBounds="false"
                android:scaleType="fitXY"
                android:src="@drawable/ic_access_time_black_24dp"
                android:tint="@android:color/darker_gray" />

            <TextView
                android:id="@+id/card_laenge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_Titel"
                android:layout_toRightOf="@id/ic_clock"
                android:text="00:00"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/ic_date"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignTop="@+id/card_laenge"
                android:layout_marginLeft="8sp"
                android:layout_marginRight="2sp"
                android:layout_toEndOf="@+id/card_laenge"
                android:adjustViewBounds="false"
                android:scaleType="fitXY"
                android:src="@drawable/ic_event_note_black_24dp"
                android:tint="@android:color/darker_gray" />

            <TextView
                android:id="@+id/card_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_Titel"
                android:layout_toRightOf="@id/ic_date"
                android:text="32.3.2017"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/card_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_laenge"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="8sp"
                android:layout_marginTop="4sp"
                android:layout_toRightOf="@id/card_cover"
                android:text="Beschreibung"
                android:textColor="@android:color/black"
                android:textSize="10sp" />



        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>