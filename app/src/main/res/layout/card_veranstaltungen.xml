<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_veranstaltungen"
    android:background="@drawable/selector">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http;//schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector">

            <ImageView
                android:layout_width="100sp"
                android:layout_height="140sp"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:layout_marginRight="2dp"
                android:id="@+id/plakat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:textSize="18sp"
                android:text="Veranstaltung"
                android:textStyle="bold"
                android:id="@+id/veranstaltung_string"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/plakat"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Motto"
                android:id="@+id/veranstaltung_motto"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@id/plakat"
                android:layout_below="@id/veranstaltung_string" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Datum:"
                android:id="@+id/veranstaltung_datum_string"
                android:layout_toRightOf="@id/plakat"
                android:layout_marginTop="15sp"
                android:layout_below="@id/veranstaltung_motto" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="dd.mm.yyyy"
                android:id="@+id/veranstaltung_datum"
                android:layout_marginLeft="2sp"
                android:layout_alignTop="@+id/veranstaltung_datum_string"
                android:layout_toEndOf="@+id/veranstaltung_datum_string" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Ort:"
                android:id="@+id/veranstaltung_ort_string"
                android:layout_toRightOf="@id/plakat"
                android:layout_below="@id/veranstaltung_datum_string" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="MusterstraÃŸe xx"
                android:id="@+id/veranstaltung_ort"
                android:layout_marginLeft="2sp"
                android:layout_alignTop="@+id/veranstaltung_ort_string"
                android:layout_toEndOf="@+id/veranstaltung_ort_string" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>