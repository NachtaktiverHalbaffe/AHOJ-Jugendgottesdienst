<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_team_detail">

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/team_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_detail"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="6sp"
            android:layout_below="@id/toolbar">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8sp"
                android:layout_marginLeft="8sp"
                android:layout_marginTop="4sp"
                android:layout_marginBottom="4sp"
                android:background="@drawable/selector">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="330sp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="6sp"
                    android:id="@+id/team_profilpic_detail"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Name"
                    android:textStyle="bold"
                    android:id="@+id/team_name_detail"
                    android:textColor="#494949"
                    android:layout_marginTop="5sp"
                    android:layout_below="@+id/team_profilpic_detail"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="Hauptfunktion"
                    android:id="@+id/team_hauptfunktion_detail"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/team_name_detail"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:layout_marginTop="8sp"
                    android:text="Alter:"
                    android:textStyle="bold"
                    android:id="@+id/team_alter_string"
                    android:layout_below="@id/team_hauptfunktion_detail" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginLeft="4sp"
                    android:text="(xx Jahre)"
                    android:id="@+id/team_alter"
                    android:layout_above="@+id/team_wohnort"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/team_alter_string" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="2sp"
                    android:text="Gemeinde:"
                    android:textStyle="bold"
                    android:id="@+id/team_wohnort_string"
                    android:layout_below="@id/team_alter_string"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="2sp"
                    android:layout_marginLeft="4sp"
                    android:text="(Wohnort)"
                    android:id="@+id/team_wohnort"
                    android:layout_below="@id/team_alter_string"
                    android:layout_toRightOf="@id/team_wohnort_string"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="2sp"
                    android:text="Mitarbeit seit:"
                    android:textStyle="bold"
                    android:id="@+id/team_mitarbeitszeit_string"
                    android:layout_below="@id/team_wohnort" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="2sp"
                    android:layout_marginLeft="4sp"
                    android:text="(x Jahren)"
                    android:id="@+id/team_mitarbeitszeit"
                    android:layout_below="@id/team_wohnort"
                    android:layout_toRightOf="@id/team_mitarbeitszeit_string" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="12sp"
                    android:text="Für mich ist der AHOJ:"
                    android:textStyle="bold"
                    android:id="@+id/team_ahojverständnis_string"
                    android:layout_below="@id/team_mitarbeitszeit"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_gravity="fill"
                    android:text="(Kurzer Text, was der Ahoj für ihn ist)"
                    android:id="@+id/team_ahojverständnis"
                    android:layout_below="@+id/team_ahojverständnis_string"
                    android:layout_alignParentStart="true"
                    android:layout_alignEnd="@+id/team_mitarbeitszeit"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:layout_marginTop="8sp"
                    android:text="Ich arbeite mit, weil:"
                    android:textStyle="bold"
                    android:id="@+id/team_motivation_string"
                    android:layout_below="@id/team_ahojverständnis" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_gravity="fill"
                    android:layout_marginBottom="10sp"
                    android:text="(Kurzer Text, was die Motivation ist)"
                    android:id="@+id/team_motivation"
                    android:layout_below="@+id/team_motivation_string"
                    android:layout_alignParentStart="true"
                    android:layout_alignEnd="@+id/team_mitarbeitszeit"
                    android:layout_alignParentEnd="true"
                    android:gravity="fill"/>



            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
    </FrameLayout>
</ScrollView>